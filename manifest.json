{
  "manifest_version": 3,
  "name": "Truth & Bias Analyzer",
  "version": "0.1.0",
  "description": "Analyzes web content for truthfulness and bias.",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
